# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Gmail Configuration (Option 1: OAuth2 - Recommended)
GMAIL_EMAIL=your-email@gmail.com
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token

# Gmail Configuration (Option 2: App Password - Simpler setup)
# GMAIL_APP_PASSWORD=your-gmail-app-password

# Database Configuration (for future use)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=invoice_automation
DB_USER=invoice_user
DB_PASS=invoice_password

# File Upload Configuration
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# Email Configuration
EMAIL_FROM_NAME=Invoice Automation
EMAIL_REPLY_TO=noreply@yourdomain.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8000

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
