{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "server.js" },
    { "source": "/(js|css|assets)/(.*)", "destination": "public/$1/$2" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "trailingSlash": false,
  "cleanUrls": true
}
